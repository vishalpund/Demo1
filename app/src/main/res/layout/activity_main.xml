<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="423dp"
            android:background="#B00020"
            android:ems="10"/>


        <TextView
            android:layout_width="473dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="163dp"
            android:text="Heyy Hii we are here to help you connect with the AMaZING people who desire to sell or buy booooks"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/editText2"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:ems="0"
            android:inputType="textPersonName"
            android:text="BOOKxChNGE"
            android:textColor="#FFFFFF"
            android:textSize="60sp"/>
        <Button
            android:id="@+id/addBtn"
            android:layout_width="150dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="282dp"
            android:text="Learn More"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="178dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/addBtn"
            android:layout_marginEnd="66dp"
            android:text="JOIN THE CLUB"
            android:textColor="#000000" android:layout_marginTop="2dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="314dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="VALUE"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="445dp" />
</androidx.constraintlayout.widget.ConstraintLayout>